                        </div>
                        <div class="col-12">
                            @Html.TextAreaFor(x => x.DTO_iletisim.mesaj, new { placeholder = "Mesajınız...", @class = "form-control" })
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn alazea-btn mt-15">GÖNDER</button>
                            <label>@TempData["Mesaj"]</label>
                        </div>
                    </div>


