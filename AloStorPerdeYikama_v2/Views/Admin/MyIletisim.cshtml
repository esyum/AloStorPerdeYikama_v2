@using AloStorPerdeYikama_v2.Models
@model IEnumerable<Iletisim>

    @{
        ViewBag.Title = "Bilgi Formu";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="content">
        <div class="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <h4 class="card-title">Bilgi Formu Listesi</h4>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="table-responsive table-bordered">
                                <table id="add-row" class="display table table-striped table-hover table-bordered mt--2">
                                    <thead>
                                        <tr>
                                            <th>İsim</th>
                                            <th>Eposta</th>
                                            <th>Konu</th>
                                            <th>Mesaj</th>
                                            <th>Tarih</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.name</td>
                                                <td>@item.eposta</td>
                                                <td>@item.konu</td>
                                                <td>@item.mesaj</td>
                                                <td>@item.OlusturmaTarihi</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
