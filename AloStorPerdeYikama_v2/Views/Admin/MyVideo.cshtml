@using AloStorPerdeYikama_v2.Models
@model IEnumerable<Video>

@{
    ViewBag.Title = "Videolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <h4 class="card-title">Video Listesi</h4>
                            <button class="btn btn-primary btn-round ml-auto" onclick="location.href='@Url.Action("Video_Create", "Admin")'" data-toggle="modal" data-target="#addRowModal">
                                <i class="fa fa-plus"></i>
                                Yeni Kayıt
                            </button>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive table-bordered">
                            <table id="add-row" class="display table table-striped table-hover table-bordered mt--2">
                                <thead>
                                    <tr>
                                        <th style="width: 20%">Video</th>
                                        <th>Dosya Adı</th>
                                        <th>Dosya Tipi</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th style="width: 10%"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <video id="VideoPlayer" src='@Url.Action("Video_DownloadFile", "Admin", new {fileId = item.ID})' controls="true" 
                                                       width="250" height="250" loop="true" />
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.ContentType</td>
                                            <td>@item.OlusturmaTarihi</td>
                                            <td>
                                                <div class="form-button-action">
                                                    <button type="button" onclick="location.href='@Url.Action("Video_Delete", "Admin", new { id=item.ID})'" data-toggle="tooltip" title="" class="btn btn-link btn-danger" data-original-title="Sil">
                                                        <i class="fa fa-times"></i>
                                                    </button>

                                                </div>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




